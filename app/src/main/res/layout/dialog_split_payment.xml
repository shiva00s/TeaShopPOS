<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24.dp">

    <TextView
        android:id="@+id/tvTotalDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Due: ₹ 99.00"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorError"
        android:layout_marginBottom="16.dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCashAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cash Amount (₹)"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etQrAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="QR / GPay Amount (₹)"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining: ₹ 99.00"
        android:textColor="?android:attr/textColorSecondary"/>

</LinearLayout>
