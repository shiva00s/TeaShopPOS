<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorSurfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_small"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:gravity="center"
            android:text="ðŸ§¾"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textStyle="bold"
                tools:text="STANDING (#d578)" />

            <TextView
                android:id="@+id/tvOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Vazhaikkai Bajji x 1, Nannari Sarbath x 1..." />

            <TextView
                android:id="@+id/tvOrderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="â‚¹ 65.00" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearOrder"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="0dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@color/red"
            app:iconGravity="textStart"
            app:backgroundTint="@android:color/transparent" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
